<?xml version="1.0" encoding="utf-8"?>
<resources>



    <declare-styleable name="PswText">
        <!--密码长度-->
        <attr name="pswLength" format="integer"/>
        <!--密码框颜色-->
        <attr name="borderColor" format="color"/>
        <!--密码颜色-->
        <attr name="pswColor" format="color"/>
        <!--输入时密码框颜色-->
        <attr name="inputBorder_color" format="color"/>
        <!--输入时密码框阴影颜色-->
        <attr name="borderShadow_color" format="color"/>
        <!--明文密码文字大小-->
        <attr name="psw_textSize" format="dimension"/>
        <!--密码框圆角程度-->
        <attr name="borderRadius" format="dimension"/>
        <!--是否使用图片绘制密码框-->
        <attr name="isDrawBorderImg" format="boolean"/>
        <!--按back键时，是否需要绘制明文密码-->
        <attr name="isShowTextPsw" format="boolean"/>
        <!--输入密码时密码框是否有阴影-->
        <attr name="isShowBorderShadow" format="boolean"/>
        <!--密码框图片-->
        <attr name="borderImg" format="reference"/>
        <!--输入时变化的密码框图片-->
        <attr name="inputBorderImg" format="reference"/>
        <!--延迟绘制密码圆点的时间,1000 = 1s-->
        <attr name="delayTime" format="integer"/>
        <!--是否只绘制明文密码-->
        <attr name="clearTextPsw" format="boolean"/>
        <!--是否只绘制圆点-->
        <attr name="darkPsw" format="boolean"/>
        <!--是否在输入密码时不更改密码框颜色-->
        <attr name="isChangeBorder" format="boolean"/>
    </declare-styleable>

    <!--corner_color 边角颜色，
      scanner_color 扫描线颜色
      possible_result_color 扫描点颜色
      frame_color 扫描框边线颜色
      mask_color 模糊区域颜色
      label_text  框上方提示
  -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color"/>
        <attr name="laser_color" format="color"/>
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color"/>
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="float"/>
    </declare-styleable>
</resources>